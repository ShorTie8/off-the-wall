SHELL=/bin/bash
PATH=/sbin:/bin:/usr/sbin:/usr/bin
MAILTO=root
HOME=/

# run-parts
*/5 * * * * root /usr/bin/smoothwall/run-parts /etc/cron.often
01 * * * * root /usr/bin/smoothwall/run-parts /etc/cron.hourly
02 4 * * * root /usr/bin/smoothwall/run-parts /etc/cron.daily
22 4 * * 0 root /usr/bin/smoothwall/run-parts /etc/cron.weekly
42 4 1 * * root /usr/bin/smoothwall/run-parts /etc/cron.monthly

# Update time
30 * * * * root /usr/bin/smoothwall/gettime.pl >/dev/null

# watcher
* * * * * nobody /usr/bin/smoothwall/stayup.pl >/dev/null

# Make some nice graphs
*/5 * * * * root /usr/bin/smoothwall/rrdtool.pl >/dev/null
