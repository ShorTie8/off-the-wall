include ../../../Makefile.conf

PACKAGE = DBD-SQLite
VERSION = 1.46

BASE_URL = http://search.cpan.org/src/ISHIGAKI/$(PACKAGE)-$(VERSION)/lib/DBD/SQLite.pm

CONFIGURE = yes
CLEAN = yes

configure: $(DIR)/
	@+cd $(DIR); echo 'y' | perl Makefile.PL

clean:
	@echo -n " $(PACKAGE)"
	@rm -rf $(DIR)
	@rm -rf $(COMPILE_DIR)

include ../../../Makefile.rules
